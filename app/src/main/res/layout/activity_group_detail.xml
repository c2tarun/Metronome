<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mad.metronome.GroupDetailActivity"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Grp ID"
        android:id="@+id/groupIdTV"
        android:layout_marginTop="15dp"
        android:layout_weight="0.19"
        android:inputType="number"
        android:textSize="100dp"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leader"
        android:id="@+id/leaderCB"
        android:checked="false"
        android:layout_marginTop="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/strengthLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center|center_horizontal"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team Strength"
            android:id="@+id/strengthLabel" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="-1"
            android:id="@+id/strengthTV"
            android:layout_marginTop="15dp"
            android:inputType="number"/>


    </LinearLayout>



    <Button
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:text="Join"
        android:id="@+id/nextButton"
        android:layout_marginTop="15dp"
        android:layout_weight="0.11"
        android:textSize="40dp"
        android:background="#3a6ad3"
        android:textColor="#ffffff"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutButton"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
